<h1>Products > New</h1>

<% form_for(@product, :html => {:multipart => true} ) do |f| -%>

<p><%= f.label :title %><br />
<%= f.text_field :title %></p>

<p>	<%= f.label :description %><br />
	<%= f.text_area :description %></p>
	
	<p>	<%= f.label 'Model Number' %><br />
		<%= f.text_field :modelnumber %></p>
	
<p>    <%= f.label 'Official Link' %><br />
	<%= f.text_field :officialurl %></p>
	
	<p><%= image_tag(@product.image.url) %><br />
	<%= f.label 'Replace Image' %><br />
	<%= f.file_field :image %></p>
	
<p>    <%= f.label 'Amazon Link' %><br />
	<%= f.text_field :amazonurl %></p>
	
	<p><%= f.label :category %><br />
		<%= f.text_field :category %></p>
	
    <%= f.submit "Create" %>

<% end -%>