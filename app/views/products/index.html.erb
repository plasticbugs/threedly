<%= flash[:error] %>

<% @products.each do |product| %>
    <ul class="item"><li class="title"><%= link_to product.title, product %></li>
	    <li class="modelno"><%= product.modelnumber %></li>
	    <li class="officiallink"><%= product.officialurl %></li>
	    <li class="rating"><%= product.rating %></li>
	    <li class="category"><%= product.category %></li>
	<% if user_signed_in? %>
	    <li><%= link_to "Edit", edit_product_path(product) %></li>
	    <li><%= link_to "Delete", product_path(product), :confirm => "Are you sure?", :method => :delete %></li>
	<% end %>
	  </ul>
<% end %>

<% if user_signed_in? %>
	<%= link_to "Add another product", new_product_path %>
<% end %>