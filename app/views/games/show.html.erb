<%= image_tag(@game.image.url, :class => 'itempic') %>
<div class="info">
  <ul>
	<li class='title'><%= @game.title %></li>
	<li class='description'><%= @game.description %></li>
	<li><%= @game.rating %></li>
	<li><%= link_to "Buy on Amazon", @game.amazonurl %></li>
	</ul>
</div>

<div class='quotes'><%= render :partial => "quotes/quote", :collection => @game.quotes %></div>

<% if user_signed_in? %><ul class="adminpanel">	<li><%= link_to "Edit this item", edit_game_path(@game) %></li> 
	<li><%= link_to "Add a pull quote to this item", game_quotes_path(@game) %></li>
 
	<li><%= link_to "Add another item", new_game_path %></li>
</ul><% end %>